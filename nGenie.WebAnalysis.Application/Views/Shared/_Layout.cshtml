@using nGenie.WebAnalysis.Application.Common;

<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    <!--[if lt IE 10]>
      <script src="~/Content/assets/js/html5shiv.js"></script>
      <script src="~/Content/assets/js/respond.min.js"></script>
      <![endif]-->
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=0, minimal-ui">
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="description" content="Gradient Able Bootstrap admin template made using Bootstrap 4 and it has huge amount of ready made feature, UI components, pages which completely fulfills any dashboard needs." />
    <meta name="keywords" content="olap, pivot, pivotgrid, analysis, ssas, office, excel, flat ui, admin Admin, Responsive, Landing, Bootstrap, App, Template, Mobile, iOS, Android, apple, creative app">
    <meta name="author" content="nGenie DashLab" />
    <link rel="icon" href="~/Content/assets/images/favicon.ico" type="image/x-icon">
    <link href="~/Content/assets/css/roboto.css?family=Roboto:400,500" rel="stylesheet">

    @Styles.Render("~/bootstrap-css")
    @Styles.Render("~/waves-css")
    @Styles.Render("~/themify-css")
    @Styles.Render("~/font-awesome-css")
    @Styles.Render("~/style-css")
    @Styles.Render("~/mCustomScrollbar-css")

    <!-- Nuovi css forse table zero configuration-->
    @*@Styles.Render("~/dataTables-bootstrap4-css")
        @Styles.Render("~/buttons-dataTables-css")
        @Styles.Render("~/responsive-bootstrap4-css")*@
    @RenderSection("CoreCssSection", required: false)

    @RenderSection("CustomCssSection", required: false)
    @RenderSection("CustomHeaderSection", required: false)

    @Scripts.Render("~/jquery-js")
    @Scripts.Render("~/jquery-ui-js")

    @Scripts.Render("~/popper-js")
    @Scripts.Render("~/bootstrap-js")
    @Scripts.Render("~/waves-js")
    @Scripts.Render("~/jquery-slimscroll-js")
    @Scripts.Render("~/modernizr-js")
    @Scripts.Render("~/pcoded-js")
    @Scripts.Render("~/vertical-js")
    @Scripts.Render("~/mCustomScrollbar-js")
    @Scripts.Render("~/script-js")

    <!-- Nuovo, serve per utilizzare la libreria signalR-->
    @Scripts.Render("~/jquery-signalR-js")
    <script src="~/signalr/hubs"></script>
</head>
<body>
    @Html.Partial("~/Views/Shared/_preloader.cshtml")

    <div id="pcoded" class="pcoded">
        <div class="pcoded-overlay-box"></div>
        <div class="pcoded-container navbar-wrapper">
            <!-- INI - TOP BAR AREA -->
            @Html.Partial("~/Views/Shared/NavBar/_headernavbar.cshtml")
            <!-- END - TOP BAR AREA -->
            <!-- INI - SIDEBAR AREA -->
            @*@Html.Partial("~/Views/Shared/SideBar/_pUserChat.cshtml")
                @Html.Partial("~/Views/Shared/SideBar/_pShowChat.cshtml")*@
            <!-- END - SIDEBAR AREA -->
            <!-- INI - CONTENT MAIN AREA -->
            <div class="pcoded-main-container">
                <div class="pcoded-wrapper">
                    <!-- INI - CONTENT MAIN LEFT MENU -->
                    @*Disabilitata istruzione perche' la pagina richiamata richiede un Model*@
                    @*@Html.Partial("~/Views/Shared/NavBar/_leftnavbar.cshtml")*@

                    <!-- END - CONTENT MAIN LEFT MENU -->
                    <!-- INI - CONTENT MAIN PAGE -->
                    <div class="pcoded-content">
                        @RenderBody()
                    </div>
                    <!-- END - CONTENT MAIN PAGE -->
                </div>
            </div>
            <!-- END - CONTENT MAIN AREA -->
        </div>
    </div>



    <!-- Nuove probabilmente datatable zero configuration-->
    @*@Scripts.Render("~/jquery-dataTables-js")
        @Scripts.Render("~/datatables-buttons-js")*@

    @RenderSection("scripts", required: false)



    @*@@Attenzione potrebbe venire riferito due volte*@
    @*  Libreria Toastr *@
    @Scripts.Render("~/toastr-js")
    @Styles.Render("~/toastr-css")
    <script src="~/Content/assets/js/ui-common.js"></script>

    @{
        @*Mostra all'utente un messaggio di errore se presente in TempData*@
        Object tempDataErrorMessage = TempData[Costanti.KEY_ERROR_MESSAGE];
        if (tempDataErrorMessage != null)
        {
            string errorMessage = (string)tempDataErrorMessage;
            if (!string.IsNullOrEmpty(errorMessage))
            {
                <script>
                    showTooltipError("@errorMessage");
                </script>
            }
        }
    }
</body>
</html>
