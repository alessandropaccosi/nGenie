@model nGenie.WebAnalysis.Application.Models.DbModel.ServerOlap

@{
    Layout = "~/Views/Shared/_Content.cshtml";
}

@section Content
{
    <input type="hidden" id="ServerId" name="ServerOlapId" value="@Model.Id.ToString()">
    <input type="hidden" id="Attivo" name="Attivo" value="@Model.Attivo.ToString().ToLower()">

    <div class="form-group row">
        <label class="col-sm-4 col-form-label">Nome del server</label>
        <div class="col-sm-8">
            <input type="text" class="form-control" id="NomeServer" value="@Model.Nome">
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-4">
            <label>Url per il recupero di dati OLAP </label>
            <br />
            <small>Es. http://[server]/olap/msmdpump.dll</small>
        </div>
        <div class="col-sm-8">
            <input type="text" class="form-control" id="ServerUrl" value="@Model.Url">
        </div>
    </div>

    <br />
    <div>
        <input type="button" value="Annulla" onclick="javascript:caricaListaServer()">
        <input type="button" value="Salva" onclick="inserisciModificaServer()">
    </div>
}



